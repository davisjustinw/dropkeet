<div class="level">
  <%= form_with model: @inventory_item do |f| %>
    <%= render "layouts/error_messages", object: @inventory_item %>
    <div class="field">
      <div class="control">
        <%= f.label :par, class: "label" %>
        <%= f.text_field :par,
          class: "input",
          autofocus: true %>
      </div>
    </div>

    <%= f.hidden_field :inventory_id %>
    <%= f.hidden_field :item_id %>

    <div class="field">
      <%= f.submit "save",
        class: "control button is-outlined has-text-grey" %>
    </div>
  <% end %>
</div>
