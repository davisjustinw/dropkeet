
<div class="tile">
  <%= form_with model: @inventory_item, url: inventory_item_path, method: 'patch' do |f| %>
    <div class="field">
      <div class="control">
        <%= f.text_field :par, class: "input is-medium" %>
      </div>
    </div>

    <div class="field">
      <%= f.submit "update", class: "control button is-primary" %>
    </div>
  <% end %>
</div>
