<%= form_with model: @item do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_field :name, class: "input is-medium" %>
    </div>
  </div>

<%= fields_for :meta_tags do |mt| %>
  <% @meta_tags.each do |meta_tag| %>
    <%= mt.label "meta_tags_#{meta_tag.id}" do %>
      <%= mt.check_box(:ids, {multiple: true}, meta_tag.id, nil) %>
      <%= meta_tag.name %>
    <% end %>
    <br>
  <% end %>
<% end %>


  <div class="field">
    <%= f.submit "create", class: "control button is-primary" %>
  </div>

<% end %>
