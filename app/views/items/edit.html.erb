
  <%= form_with model: @item do |f| %>
    <div class="field">
      <div class="control">
        <%= f.text_field :name, class: "input is-medium" %>
      </div>
    </div>

    <%= fields_for :meta_tags do |i| %>
      <% @inventories.each do |inventory| %>
        <div class="field is-horizontal">
          <div class="field-label">
            <label class="label"><%= inventory.name %></label>
          </div>

          <div class="field-body">
            <div class="control">
              <%= i.text_field :par, class: "input" %>
            </div>
          </div>

        </div>
      <% end %>
    <% end %>

    <div class="field">
      <%= f.submit "create", class: "control button is-primary" %>
    </div>


  <% end %>
