
  <div class="column is-one-fifth is-offset-two-fifths">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, class: "label" %>
      <div class="control">
        <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <div class="control">
        <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <div class="control">
          <%= f.label class: "label" do %>
            <%= f.check_box :remember_me %>
            remember me
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="field">
      <div class="control">
        <%= f.submit "Log in", class: "button" %>
      </div>
    </div>

<% end %>
  <p>
    or
  </p>

  <%= render "devise/shared/links" %>
</div>
