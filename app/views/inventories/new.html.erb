<div class="column">
    <%= form_with model: @inventory do |f| %>
      <div class="field">
          <div class="control">
            <%= f.text_field :name, class: "input is-medium", placeholder: "new inventory name" %>
          </div>
      </div>
      <div class="field">
        <%= f.submit "create", class: "control button is-primary"%>
      </div>
    <% end %>
</div>
