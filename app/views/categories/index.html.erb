
<table class="table is-hoverable">
  <thead>
    <tr>
        <th class="has-text-centered">
          Categories
        </th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="has-text-centered">
          <%= link_to category.name, category_path(category) %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td class="has-text-centered">
        <%= link_to "+",
          new_category_path,
          class: "button is-small"
        %>
      </td>
    </tr>
  </tbody>
</table>
