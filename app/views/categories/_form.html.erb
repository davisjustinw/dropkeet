<div class="level">
  <div class="level-item">
    <%= form_with model: setup_category(@category) do |f| %>
      <%= render "layouts/error_messages", object: @category %>

      <div class="field">
        <div class="control">
          <%= f.label :name,  class: "label" %>
          <%= f.text_field :name, class: "input", autofocus: true %>
        </div>
      </div>

      <div class="field">
        <%= f.submit "save", class: "control button is-dark is-outlined"  %>
      </div>
    <% end %>
  </div>
</div>
